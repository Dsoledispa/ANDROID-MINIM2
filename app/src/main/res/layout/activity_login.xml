<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <!-- He reemplazado CardView por un simple LinearLayout con elevación -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#99FFFFFF"
        android:elevation="6dp"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etLoginUsername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre de usuario"
            android:background="#99FFFFFF"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Contraseña"
            android:background="#99FFFFFF"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:inputType="textPassword" />


        <CheckBox
            android:id="@+id/checkboxMostrarPassword"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Mostrar contraseña" />

        <CheckBox
            android:id="@+id/cbRememberMe"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginBottom="16dp"
            android:minHeight="48dp"
            android:padding="8dp"
            android:text="Recordarme" />
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Entrar"
            android:textAllCaps="false"
            android:backgroundTint="#1E3A8A"
            android:background="#99FFFFFF"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnGoToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Registrarse"
            android:background="@android:color/transparent"
            android:textColor="#1E3A8A"
            android:textAllCaps="false"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
